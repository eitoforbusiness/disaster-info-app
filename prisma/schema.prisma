generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  category  String   // 通行止め, 陥没, 避難所混雑
  comment   String
  latitude  Float
  longitude Float
  likes     Int      @default(0)  // いいね数（信頼度）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
